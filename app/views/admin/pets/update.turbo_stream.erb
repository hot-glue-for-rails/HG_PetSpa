<%= turbo_stream.replace "pet__#{@pet.id}" do %>
  <%= render partial: 'line', locals: {pet: @pet }.merge(@human ? {human: @human} : {}) %>
<% end %>

<%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices" %>
  <% if @pet.errors.any? %>
  <%= render partial: "errors", locals: {resource: @pet} %>
  <% end %>
<% end %>
