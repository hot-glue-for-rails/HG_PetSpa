<% if @appointment.errors.none? %>
  <%= turbo_stream.replace "appointments-list" + "" do %>
  <%= render partial: "list", locals: {appointments: @appointments} %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "appointment-new" do %>
  <% if @appointment.errors.none? %>
  <%= render partial: "new_button", locals: {} %>
  <% else %>
  <%= render partial: "new_form", locals: {appointment: @appointment} %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices" %>
  <% if @appointment.errors.any? %>
  <%= render partial: "errors", locals: {resource: @appointment} %>
  <% end %>
<% end %>
