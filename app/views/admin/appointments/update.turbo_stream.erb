<%= turbo_stream.replace "appointment__#{@appointment.id}" do %>
  <%= render partial: 'line', locals: {appointment: @appointment } %>
<% end %>

<%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices" %>
  <% if @appointment.errors.any? %>
  <%= render partial: "errors", locals: {resource: @appointment} %>
  <% end %>
<% end %>
