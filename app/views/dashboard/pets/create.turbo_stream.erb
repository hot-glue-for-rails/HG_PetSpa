<% if @pet.errors.none? %>
  <%= turbo_stream.replace "pets-list" + "" do %>
  <%= render partial: "list", locals: {pets: @pets} %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "pet-new" do %>
  <% if @pet.errors.none? %>
  <%= render partial: "new_button", locals: {} %>
  <% else %>
  <%= render partial: "new_form", locals: {pet: @pet} %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices" %>
  <% if @pet.errors.any? %>
  <%= render partial: "errors", locals: {resource: @pet} %>
  <% end %>
<% end %>
